<view class="details"><view class="background"><view class="top"></view><view class="bottom"></view></view><view class="bookInfo"><image src="{{bookInfo.cover}}"></image><text class="bookTitle">{{bookInfo.title}}</text><text class="bookSite">{{bookInfo.author}}</text><view class="infoBtn"><navigator class="startRead" hover-class="none" url="{{'/pages/reader/reader?book_id='+bookInfo.id+'&book_title='+bookInfo.title}}">开始阅读</navigator><view data-event-opts="{{[['tap',[['addShelf',['$event']]]]]}}" class="addReader" bindtap="__e">{{addedShelf?'已加入书架':'加入书架'}}</view></view></view><view class="bookMsg"><view class="rate"><block wx:for="{{[1,2,3,4,5]}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="{{['rate_item '+(book_rate>=item?'rate_active':'')]}}">★</view></block></view><view class="lastChapter">更新至<text>{{bookInfo.laterChapter}}</text></view><view class="info_commit"><view data-event-opts="{{[['tap',[['showTab',['$event']]]]]}}" class="tab" bindtap="__e"><view class="{{['tab_item info '+(showInfoContent?'active':'')]}}" data-id="1">详情</view><view class="{{['tab_item commit '+(showInfoContent?'':'active')]}}" data-id="0">{{"评价("+shortReviews.total+")"}}</view></view><block wx:if="{{showInfoContent}}"><scroll-view class="info_content" scroll-y="true"><view class="info_desc">{{'简介： '+bookInfo.longIntro+''}}</view><view class="Recommend"><view class="re_topic"><view class="re_title">看过这本书的人还在看</view><view data-event-opts="{{[['tap',[['randomRecommendBooks',['$event']]]]]}}" class="re_refresh" bindtap="__e">换一换</view></view><view class="re_books"><block wx:for="{{showRecommendBooks}}" wx:for-item="item" wx:for-index="index" wx:key="index"><navigator class="re_bookItem" hover-class="none" url="{{'/pages/details/details?book_title='+item.title+'&book_author='+item.author+'&book_desc='+item.shortIntro+'&book_src='+(STATIC_HOST+item.cover)}}"><image src="{{STATIC_HOST+''+item.cover}}"></image><view class="re_bookTitle">{{item.title}}</view></navigator></block></view></view></scroll-view></block><block wx:else><scroll-view class="commit_content" scroll-y="true"><block wx:for="{{shortReviews.docs}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="review_item"><image src="{{STATIC_HOST+''+item.author.avatar}}"></image><view class="review_info"><view class="review_site">{{item.author.nickname}}</view><view class="review_content">{{item.content}}</view></view></view></block></scroll-view></block></view></view></view>
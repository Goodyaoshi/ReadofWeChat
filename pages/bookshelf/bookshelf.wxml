<view class="container"><view class="bookshelfContainer"><view class="operation"><image class="edit" src="{{isEdit?'../../static/img/ok.png':'../../static/img/edit.png'}}" data-event-opts="{{[['tap',[['edit',['$event']]]]]}}" bindtap="__e"></image><navigator class="help" url="/pages/help/help" hover-class="none">帮助</navigator><image class="refresh1" src="/static/img/refresh1.png" data-event-opts="{{[['tap',[['getShelfInfo',['$event']]]]]}}" bindtap="__e"></image></view><block wx:if="{{!bookShelfData.length}}"><view class="noBooks">主人还没收藏书籍哦，请去书城收藏吧！</view></block><block wx:for="{{bookShelfData}}" wx:for-item="item" wx:for-index="index" wx:key="index"><navigator class="{{['bookshelf_item '+((index+1)%3===0?'noMargin':'')]}}" url="{{isEdit?'':'/pages/reader/reader?book_id='+item.bookInfo.id+'&book_title='+item.bookInfo.title+'&book_serialid='+item.readNum}}" hover-class="none"><block wx:if="{{hasUpdate[index]}}"><view class="hasUpdate">有更新</view></block><image class="{{[isEdit?'deletAnimation':'']}}" src="{{item.bookInfo.cover}}"></image><block wx:if="{{isEdit}}"><icon class="deletIcon" data-id="{{index}}" type="clear" color="#999" size="30" data-event-opts="{{[['tap',[['deleteFun',['$event']]]]]}}" bindtap="__e"></icon></block><text class="name">{{item.bookInfo.title}}</text><view class="readNum">{{"读到第"+item.readNum+"章"}}</view></navigator></block></view></view>